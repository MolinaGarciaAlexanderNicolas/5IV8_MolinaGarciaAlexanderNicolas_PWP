        <input type="text" id="nombre" name="nombre" value="<%= estudiante.nombre %>" class="unput" required>
        <label for="edad" class="label">Edad: </label>
        <input type="number" id="edad" name="edad" value="<%= estudiante.edad %>" class="unput" required>
        <label for="curso" class="label">Curso: </label>
